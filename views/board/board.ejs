<!doctype html>
<html>
<% include ../includes/head %>

<body class="container">
    <header>
        <% include ../includes/header %>
    </header>
    <main>
        <div class="row justify-content-center" style="margin-top:30px;">
            <div class="col-4 text-center">
                <h1>자유게시판</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10">
                <table class="table">
                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>글번호</th>
                            <th width="70%">제목</th>
                            <th>글쓴이</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < list.length; i++) { %>
                        <tr class="text-center">
                            <td><%= list[i].id %></td>
                            <td><a href="/board/view/<%= list[i].id %>"><%= list[i].title %></a></td>
                            <td><%= list[i].writer %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-10">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (pager.before) { %>
                            <li class="page-item"> <a class="page-link" href="/board?page=<%= pager.startPage - 1 %>"
                                    aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        <% } %>
                        <% for(var i = pager.startPage; i <= pager.endPage; i++ ) { %>
                            <li class="page-item<% if(pager.nowPage == i) { %> active <%}%>">
                            <a class="page-link" href="/board?page=<%= i %>">
                                <%= i %>
                                </a>
                            </li>
                        <% } %>

                        <% if (pager.next) { %> 
                            <li class="page-item"> 
                                <a class="page-link" href="/board?page=<%= pager.endPage + 1 %>" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
            <% if (locals.user) { %>
                <div class=" col-10"> 
                    <a href="/board/write" class="btn btn-primary">글쓰기</a>
                </div> 
            <% } %>
        </div>
    </main>
    <% include ../includes/footer %>
</body>

</html>